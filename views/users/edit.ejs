<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit Profile</h1>
        </div>
        <div class="form-wrapper" style="width: 35%;">
            <form action="/users/<%= user.id %>?_method=PUT" method="POST">
                
                <label for="edit-profile-username">Username</label>
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                    <input class="form-control" id="edit-profile-username" type="text" name="username" value="<%= user.username %>">
                </div>

                <label for="edit-profile-email">Email</label>
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-envelope"></i></span></div>
                    <input type="email" name="email" id="edit-profile-email" class="form-control" value="<%= user.email %>">
                </div>

                <label for="edit-profile-profile-picture">Profile Picture URL</label>
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-camera"></i></span></div>
                    <input class="form-control" id="edit-profile-profile-picture" type="text" name="profilePicture" value="<%= user.profilePicture %>">
                </div>

                <label for="edit-profile-about-me">About Me</label>
                <div class="form-group">
                    <textarea class="form-control" id="edit-profile-about-me" name="aboutMe" rows="7"><%= user.aboutMe %></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>  

            </form>
            <a href="/users/<%= user.id %>">Cancel</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>