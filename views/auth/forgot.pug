extends ../layout
block content
  .container
    .row
      .col-md-4.offset-md-4.text-center
        h3.fas.fa-lock.fa-4x
        h2.mb-3 Forgot Password?
        form(action="/forgot" method="POST")
          .form-group
            .input-group
              .input-group-prepend
                span.input-group-text
                  i.fas.fa-envelope
              input.form-control(type="email" name="email" placeholder="Email")
          .form-group
            input.btn.btn-lg.btn-primary.btn-block(type="submit" value="Send Email")