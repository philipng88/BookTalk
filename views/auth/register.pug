extends ../layout
block content
  .container
    .row
      .col-md-12.text-center
        h1 Sign Up
      .form-wrapper(style="width: 35%;")
        form(action="/register" method="POST")
          .form-group
            label(for="username") Create Username
            input#username.form-control.font-weight-bold(type="text" name="username" required)
          .form-group
            label(for="email") Enter Email
            input#email.form-control.font-weight-bold(type="email" name="email")
          .form-group
            label(for="password") Create Password
            <input class="form-control font-weight-bold" id="password" type="password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$" aria-describedby="password-requirements" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Password does not meet the requirements' : ''); if(this.checkValidity()) form.confirm_password.pattern = this.value;" required>
            small#password-requirements.form-text.text-muted Password must contain at least one number, one uppercase letter, one lowercase letter, and 8 or more characters</small>
          .form-group
            label(for="confirm_password") Confirm Password
            <input class="form-control font-weight-bold" id="confirm_password" type="password" name="confirm_password" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Passwords do not match' : '')" required>
          .form-group
            button.btn.btn-lg.btn-primary.btn-block Submit
        a(href="/books") Cancel
