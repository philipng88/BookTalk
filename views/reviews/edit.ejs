<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit Review</h1>
        </div>
        <div class="review-edit-wrapper">
            <form action="/books/<%= book_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate5" value="5" <% if (review.rating === 5) { %> checked <% } %> />
                            <label for="first-rate5" title="5 stars">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate4" value="4" <% if (review.rating === 4) { %> checked <% } %> />
                            <label for="first-rate4" title="4 stars">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate3" value="3" <% if (review.rating === 3) { %> checked <% } %> />
                            <label for="first-rate3" title="3 stars">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate2" value="2" <% if (review.rating === 2) { %> checked <% } %> />
                            <label for="first-rate2" title="2 stars">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
                            </label>
                        </div>
                        <div>
                            <input type="radio" name="review[rating]" id="first-rate1" value="1" <% if (review.rating === 1) { %> checked <% } %> />
                            <label for="first-rate1" title="1 star">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(1) %>
                            </label>
                        </div>
                    </fieldset>
                </div>
                <div class="form-group">
                    <textarea required class="form-control" type="text" name="review[text]" rows="5" placeholder="Write a review for this book..."><%= review.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books/<%= book_id %>">Cancel</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>