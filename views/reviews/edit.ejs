<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit Review</h1>
        </div>
        <div class="form-wrapper w-50">
            <form action="/books/<%= book_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <select name="review[rating]" class="form-control" id="rating">
                        <option value="5" <% if (review.rating === 5) { %> selected <% } %> >(5) <%- '<span>&#11088;</span>'.repeat(5) %></option>
                        <option value="4" <% if (review.rating === 4) { %> selected <% } %> >(4) <%- '<span>&#11088;</span>'.repeat(4) %></option>
                        <option value="3" <% if (review.rating === 3) { %> selected <% } %> >(3) <%- '<span>&#11088;</span>'.repeat(3) %></option>
                        <option value="2" <% if (review.rating === 2) { %> selected <% } %> >(2) <%- '<span>&#11088;</span>'.repeat(2) %></option>
                        <option value="1" <% if (review.rating === 1) { %> selected <% } %> >(1) &#11088;</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea 
                        required 
                        class="form-control" 
                        type="text" name="review[text]" 
                        rows="8" 
                    ><%= review.text %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books/<%= book_id %>">Cancel</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>