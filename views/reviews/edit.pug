extends ../layout
block content
  .container
    .row
      .col-md-12.text-center
        h1 Edit Review
      .form-wrapper.w-50
        form(action=`/books/${book_slug}/reviews/${review._id}?_method=PUT` method="POST")
          .form-group
            .input-group
              select.custom-select(name="review[rating]" required)
                option(value="5" selected=review.rating===5) (5) ⭐⭐⭐⭐⭐
                option(value="4" selected=review.rating===4) (4) ⭐⭐⭐⭐
                option(value="3" selected=review.rating===3) (3) ⭐⭐⭐
                option(value="2" selected=review.rating===2) (2) ⭐⭐
                option(value="1" selected=review.rating===1) (1) ⭐
          .form-group
            textarea.form-control(name="review[text]" rows="8") #{review.text}
          .form-group
            button.btn.btn-primary.btn-block(type="submit") Submit
        a(href=`/books/${book_slug}`) Cancel