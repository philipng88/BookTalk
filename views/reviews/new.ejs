<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>New Review for <em><%= book.title %></em></h1>
        </div>
        <div class="form-wrapper w-50">
            <form action="/books/<%= book.slug %>/reviews" method="POST">
                <div class="form-group">
                    <label for="rating">Leave a rating:</label>
                    <select name="review[rating]" class="form-control" id="rating">
                        <option value="" selected>...</option>
                        <option value="5">(5) <%- '<span>&#11088;</span>'.repeat(5) %></option>
                        <option value="4">(4) <%- '<span>&#11088;</span>'.repeat(4) %></option>
                        <option value="3">(3) <%- '<span>&#11088;</span>'.repeat(3) %></option>
                        <option value="2">(2) <%- '<span>&#11088;</span>'.repeat(2) %></option>
                        <option value="1">(1) &#11088;</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea 
                        id="review-content" 
                        required 
                        class="form-control" 
                        type="text" 
                        name="review[text]" 
                        placeholder="Write a review for this book..."
                        rows="8"
                    ></textarea>
                </div>
                <div class="form-group">
                    <button id="review-submit-button" class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books/<%= book.slug %>">Cancel</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>