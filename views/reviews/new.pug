extends ../layout
block content
  .container
    .row
      .col-md-12.text-center
        h1
          | New review for 
          em= book.title
      .form-wrapper.w-50
        form(action=`/books/${book.slug}/reviews` method="POST")
          .form-group
            .input-group
              select.custom-select(name="review[rating]" autofocus required)
                option(value="" selected disabled hidden) Select a rating
                option(value="5") (5) ⭐⭐⭐⭐⭐
                option(value="4") (4) ⭐⭐⭐⭐
                option(value="3") (3) ⭐⭐⭐
                option(value="2") (2) ⭐⭐
                option(value="1") (1) ⭐
          .form-group
            textarea#review-content.form-control(
              name="review[text]"
              placeholder="Write a review for this book..."
              rows="8"
            )
          .form-group
            button#review-submit-button.btn.btn-primary.btn-block Submit
        a(href=`/books/${book.slug}`) Cancel