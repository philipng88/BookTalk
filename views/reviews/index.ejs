<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header text-center h1">Reviews for <em><%= book.title %></em></div>
                <div class="card-body">
                    <% if (book.rating === 0) { %>
                        <h5><em>No reviews yet</em></h5>
                    <% } else { %>
                        <p class="h6"><em>Total reviews: <%= book.reviews.length %></em></p>
                        <p class="h6">
                            Current book rating: <% if (book.rating === 0) { %>
                                <span>n/a</span> 
                            <% } else { %>
                                <span class="stars text-center" data-rating="<%= book.rating %>" data-num-stars="5"></span>
                                <span><%= book.rating.toFixed(2) %> / 5.00</span>
                            <% } %> 
                        </p>
                        <hr style="margin-top: 0">

                        <% book.reviews.forEach(review => { %>
                            <div class="row">
                                <div class="col-md-3">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %>
                                    <%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %> 
                                    <div>Review by: <strong><%= review.author.username %></strong></div>
                                    <span><em><%= review.updatedAt.toDateString() %></em></span>
                                    <div class="pt-2">
                                        <% if (currentUser && (review.author.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                                            <a class="btn btn-sm btn-info" href="/books/<%= book._id %>/reviews/<%= review._id %>/edit">Edit</a>
                                            <form
                                                class="d-inline" 
                                                action="/books/<%= book._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST"
                                            >
                                                <input type="submit" class="btn btn-sm btn-danger" value="Delete"> 
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <p style="text-align: justify; word-wrap: break-word;"><%= review.text %></p>
                                </div>
                            </div>
                            <hr>
                        <% }) %>
                    <% } %>
                    <div class="mt-3">
                        <a class="btn btn-secondary" href="/books/<%= book._id %>"><i class="fa fa-arrow-left"></i> Back</a>
                        <a 
                            class="btn btn-primary <% if (currentUser && book.reviews.some(review => {return review.author.id.equals(currentUser._id)})) { %> d-none <% } %>"
                            href="/books/<%= book._id %>/reviews/new"
                        >
                            Write a Review 
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>