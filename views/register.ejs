<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Sign Up</h1>
        </div>
        <div class="form-wrapper" style="width: 35%;">
            <form action="/register" method="POST">
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                    <input 
                        class="form-control font-weight-bold" 
                        type="text" 
                        name="username" 
                        placeholder="Create Username" 
                        required
                    />
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-lock"></i></span></div>
                    <input 
                        class="form-control font-weight-bold" 
                        type="password" 
                        name="password" 
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                        placeholder="Create Password"
                        aria-describedby="password-requirements"
                        required
                    />
                    <small id="password-requirements" class="form-text text-muted">Password must contain at least one number, one uppercase letter, one lowercase letter, and 8 or more characters</small>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-envelope"></i></span></div>
                    <input 
                        class="form-control font-weight-bold"
                        type="email"
                        name="email"
                        placeholder="Enter Email"
                    >
                </div>
                <input type="checkbox" name="admin-option">
                <label for="admin-option">Sign up with admin privileges</label>
                <div class="form-group reveal-if-active input-group">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-key"></i></span></div>
                    <input 
                        class="form-control font-weight-bold" 
                        type="password" 
                        name="adminCode" 
                        placeholder="Enter Admin Code"
                    /> 
                </div>
                <div class="form-group">
                    <textarea 
                        class="form-control" 
                        name="aboutMe" 
                        rows="7" 
                        placeholder="Write a little something about yourself (optional)..."
                    ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books">Cancel</a>
        </div>
    </div>
</div>
<% include ./partials/footer %> 