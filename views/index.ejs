<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-book-open"></i> Welcome to BookTalk!</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/books/new">Add a Book</a> 
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap">
        <% books.forEach(book => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= book.image %>" alt="Book Cover">
                    <div class="caption">
                        <h3><%= book.title %></h3>
                        <h4><%= book.author %></h4>
                    </div>
                    <p>
                        <a href="/books/<%= book._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include partials/footer %>