<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <li class="list-group-item"><a href="/books">All books</a></li> 
            </div>
        </div>
        <div class="col-md-9">
            <div class="card bg-light mb-3">
                <img class="card-img-top show-page-book-cover" src="<%= book.image %>" alt="Book Cover">
                <div class="card-body">
                    <h2 class="card-title"><%= book.title %></h2>
                    <h4 class="card-title"><%= book.author %></h4>
                    <div class="book-like-wrapper">
                        <form action="/books/<%= book._id %>/like" method="POST">
                            <div class="btn-group">
                                <% if (currentUser && book.likes.some(like => {
                                    return like.equals(currentUser._id)
                                })) { %>
                                    <button class="btn btn-sm btn-primary">
                                        <i class="fas fa-thumbs-up"></i> Liked (<%= book.likes.length %>)
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-sm btn-secondary">
                                        <i class="fas fa-thumbs-up"></i> Like (<%= book.likes.length %>)
                                    </button>
                                <% } %>
                                <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#bookLikes">
                                    See who liked this book 
                                </button>
                            </div>
                        </form>
                    </div>
                    <p class="card-text"><%= book.synopsis %></p>
                    <p><em>Submitted by </em><%= book.creator.username %>, <%= moment(book.createdAt).fromNow() %></p>
                    <% if (currentUser && (book.creator.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                        <a class="btn btn-sm btn-info" href="/books/<%= book._id %>/edit">Edit</a>
                        <form id="delete-form" action="/books/<%= book._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>

            <div class="card bg-light">
                <div class="card-body">
                    <% if (book.rating === 0) { %>
                        <h5><em>No reviews yet</em></h5>
                    <% } else { %>
                        <p>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (book.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 4.5) { %> checked <% } %>"></span>
                            <em>(total reviews: <%= book.reviews.length %>)</em>
                        </p>
                        <p>
                            Current book rating: <strong><%= book.rating.toFixed(2) %></strong>
                        </p>
                        <p><h4>Latest reviews for this book:</h4></p>
                        <hr style="margin-top: 0;">
                        <% book.reviews.slice(0, 5).forEach(review => { %>
                            <div class="row">
                                <div class="col-md-3">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                                    <div>Review by: <strong><%= review.reviewer.username %></strong></div>
                                    <span><em><%= review.updatedAt.toDateString() %></em></span>
                                </div>
                                <div class="col-md-9">
                                    <p style="text-align: justify; word-wrap: break-word;"><%= review.text %></p>
                                    <% if(currentUser && (review.reviewer.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                                        <a 
                                            class="btn btn-sm btn-info"
                                            href="/books/<%=book._id %>/reviews/<%=review._id %>/edit"
                                        >
                                            Edit
                                        </a>
                                        <form id="delete-form" action="/books/<%=book._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                            <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                            <hr>
                        <% }) %>
                        <div style="margin-bottom: 10px;">
                            <h4><a href="/books/<%= book._id %>/reviews"><i class="far fa-eye" aria-hidden="true"></i> See all reviews</a></h4>
                        </div>
                    <% } %>
                    <div>
                        <a 
                            class="btn btn-primary btn-lg <% if (currentUser && book.reviews.some(review => {return review.reviewer.id.equals(currentUser._id)})) { %> disabled <% } %>" 
                            href="/books/<%= book._id %>/reviews/new"
                        >
                            Write a New Review
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="bookLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Book likes: <%= book.likes.length %></h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <tbody>
                        <% book.likes.forEach(like => { %>
                            <tr>
                                <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                            </tr>
                        <% }) %>
                        <% if (book.likes.length === 0) { %>
                            <tr>
                                <td><em>No likes yet </em><i class="fas fa-frown"></i></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
