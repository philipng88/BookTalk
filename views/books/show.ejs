<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="sticky-top">
                <img class="img-fluid" src="<%= book.image %>" alt="Book Cover">
                <ul class="list-group mt-3" id="side-nav">
                    <a href="#book-info" class="list-group-item list-group-item-primary">Book Info</a> 
                    <a href="#comments-card" class="list-group-item list-group-item-primary">Comments</a>
                    <a href="#reviews-card" class="list-group-item list-group-item-primary">Reviews</a>
                </ul>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div id="book-info">
                <h2><%= book.title %></h2>
                <h4><%= book.author %></h4>
                <p><%= book.synopsis %></p>
                <p>
                    <em>Submitted by </em><a href="/users/<%= book.creator.id %>"><%= book.creator.username %></a>, <%= moment(book.createdAt).fromNow() %>
                </p>
                <% if (currentUser && (book.creator.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                    <p style="display: inline;">
                        <a class="btn btn-sm btn-info" href="/books/<%= book._id %>/edit">Edit Book Listing</a>
                        <form 
                            class="d-inline" 
                            action="/books/<%= book._id %>?_method=DELETE" 
                            method="POST"
                            onsubmit="return confirm('Are you sure you want to delete this book?')"
                        >
                            <button class="btn btn-sm btn-danger">Delete Book Listing</button>
                        </form>
                    </p>
                <% } %>
                <div class="book-like-wrapper">
                    <form action="/books/<%= book._id %>/like" method="POST">
                        <div class="btn-group">
                            <% if (currentUser && book.likes.some(like => {
                                return like.equals(currentUser._id)
                            })) { %>
                                <button class="btn btn-sm btn-primary">
                                    <i class="fas fa-thumbs-up"></i> Liked (<%= book.likes.length %>)
                                </button>
                            <% } else { %>
                                <button class="btn btn-sm btn-secondary">
                                    <i class="fas fa-thumbs-up"></i> Like (<%= book.likes.length %>)
                                </button>
                            <% } %>
                            <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#bookLikes">
                                See who liked this book 
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        
            <div id="comments-card" class="card bg-light mb-3 mt-3">
                <div class="card-body">
                    <div class="clearfix">
                        <h4 class="font-weight-bold float-left">Comments <i class="fas fa-comments" aria-hidden="true"></i></h4>
                        <a class="btn btn-success float-right" 
                        role="button" 
                        data-toggle="collapse" 
                        href="#collapseComment"
                        aria-expanded="false"
                        aria-controls="collapseComment"
                        >
                            <i class="fas fa-plus" aria-hidden="true"></i>
                            Add new comment  
                        </a>
                    </div>
                    <div class="collapse" id="collapseComment">
                        <div class="card comment-well-new">
                            <% if(!currentUser) { %>
                                <div>
                                    <i class="fas fa-exclamation-triangle"></i> You must be logged in to comment.<br>
                                    <a href="/login">Click here</a> to log in
                                </div>
                            <% } %>
                            <% if(currentUser) { %>
                                <h4>Add comment</h4>
                                <form id="add-comment-form" action="/books/<%= book._id %>/comments" method="POST">
                                    <div class="form-group">
                                        <textarea class="form-control" 
                                                name="comment[text]" 
                                                placeholder="Write your comment..." 
                                                form="add-comment-form" 
                                                rows="5" 
                                                cols="70">
                                        </textarea>
                                    </div>
                                    <div class="form-group mb-0">
                                        <button class="btn btn-success btn-sm">Submit</button> 
                                    </div>
                                </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% if (book.comments.length === 0) { %>
                        <em>No comments yet</em>
                    <% } %>
                    <% book.comments.forEach(comment => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <span class="float-right"><em><%= moment(comment.createdAt).fromNow() %></em></span>
                                <span class="font-weight-bold"><%= comment.author.username %></span>
                                <p> <%= comment.text %> </p> 
                                <% if (currentUser && currentUser._id.equals(comment.author.id) || currentUser && currentUser.isAdmin) { %>
                                    <div class="button-group">
                                        <a 
                                            class="btn btn-sm btn-info" 
                                            role="button" 
                                            data-toggle="collapse" 
                                            href="#collapseEdit<%= comment._id %>"
                                            aria-expanded="false"
                                            aria-controls="collapse<%= comment._id %>"
                                        >
                                            Edit
                                        </a>
                                        <form class="d-inline" action="/books/<%= book._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </div> 
                                    <div class="collapse" id="collapseEdit<%= comment._id %>">
                                        <div class="card comment-well-edit"> 
                                            <h4>Edit comment</h4>
                                            <form id="edit-comment-form<%= comment._id %>" action="/books/<%= book._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="comment[text]" form="edit-comment-form<%= comment._id %>" cols="70" rows="5"><%= comment.text %></textarea>
                                                </div>
                                                <div class="form-group mb-0">
                                                    <button class="btn btn-warning btn-sm">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                <% } %> 
                                <hr>
                            </div>
                        </div>
                    <% }) %> 
                </div>
            </div>

            <div id="reviews-card" class="card bg-light">
                <div class="card-body">
                    <% if (book.rating === 0) { %>
                        <h5><em>No reviews yet</em></h5>
                        <a class="h5 text-info" href="/books/<%= book._id %>/reviews/new">
                            <i class="fas fa-pen"></i> Be the first to write a review!
                        </a>
                    <% } else { %>
                        <h4 class="font-weight-bold">Reviews</h4>
                        <p>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (book.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (book.rating > 4.5) { %> checked <% } %>"></span>
                            <em>(total reviews: <%= book.reviews.length %>)</em>
                        </p>
                        <p>
                            Current book rating: <span class="font-weight-bold"><%= book.rating.toFixed(2) %></span>
                        </p>
                        <hr>
                        <% book.reviews.slice(0, 5).forEach(review => { %>
                            <div class="row">
                                <div class="col-md-3">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                                    <div>Review by: <span class="font-weight-bold"><%= review.author.username %></span></div>
                                    <span><em><%= review.updatedAt.toDateString() %></em></span>
                                </div>
                                <div class="col-md-9">
                                    <p style="text-align: justify; word-wrap: break-word;"><%= review.text %></p>
                                    <% if(currentUser && (review.author.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
                                        <a 
                                            class="btn btn-sm btn-info"
                                            href="/books/<%=book._id %>/reviews/<%=review._id %>/edit"
                                        >
                                            Edit
                                        </a>
                                        <form class="d-inline" action="/books/<%=book._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                            <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                            <hr>
                        <% }) %>
                        <a class="h5 text-info" href="/books/<%= book._id %>/reviews">
                            <i class="far fa-eye" aria-hidden="true"></i> See all reviews
                        </a>
                    
                        <a 
                            class="h5 pl-3 text-info <% if (currentUser && book.reviews.some(review => {return review.author.id.equals(currentUser._id)})) { %> d-none <% } %>" 
                            href="/books/<%= book._id %>/reviews/new"
                        >
                            <i class="fas fa-pen"></i> Write a review
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="bookLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Book likes: <%= book.likes.length %></h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <tbody>
                        <% book.likes.forEach(like => { %>
                            <tr>
                                <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                            </tr>
                        <% }) %>
                        <% if (book.likes.length === 0) { %>
                            <tr>
                                <td><em>No likes yet </em><i class="fas fa-frown"></i></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
