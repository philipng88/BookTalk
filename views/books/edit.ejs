<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit <em><%= book.title %></em></h1>
        </div>
        <div class="edit-book-form-wrapper">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="book[title]" 
                        value="<%= book.title %>"
                    >
                </div>
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="book[author]" 
                        value="<%= book.author %>"
                    >
                </div>
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="book[image]" 
                        value="<%= book.image %>"
                        pattern="^https:\/\/i\.gr-assets\.com\/images\/S\/.*"
                    >
                    <small class="form-text"><strong>Note:</strong> Only images from <a href="https://goodreads.com/" target="_blank">goodreads.com</a> are accepted</small>
                </div>
                <div class="form-group">
                    <textarea 
                        class="form-control" 
                        type="text" 
                        name="book[synopsis]" 
                    ><%= book.synopsis %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/books">Cancel</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>