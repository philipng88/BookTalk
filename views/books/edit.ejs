<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit <em><%= book.title %></em></h1>
        </div>
        <div class="form-wrapper w-50">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="edit-book-title">Title</label>
                    <input
                        required 
                        class="form-control" 
                        id="edit-book-title"
                        type="text" 
                        name="title" 
                        value="<%= book.title %>"
                    >
                </div>
                <div class="form-group">
                    <label for="edit-book-author">Author</label>
                    <input
                        required 
                        class="form-control" 
                        id="edit-book-author"
                        type="text" 
                        name="author" 
                        value="<%= book.author %>"
                    >
                </div>
                <div class="form-group">
                    <label for="edit-book-image-url">Book Image URL</label>
                    <input
                        required 
                        class="form-control"
                        id="edit-book-image-url" 
                        type="text" 
                        name="image" 
                        value="<%= book.image %>"
                        pattern="^https:\/\/i\.gr-assets\.com\/images\/S\/.*"
                    >
                    <small class="form-text"><strong>Note:</strong> Only images from <a href="https://goodreads.com/" target="_blank">goodreads.com</a> are accepted</small>
                </div>
                <div class="form-group">
                    <label for="edit-book-synopsis">Synopsis</label>
                    <textarea 
                        rows="5"
                        class="form-control"
                        id="edit-book-synopsis" 
                        type="text" 
                        name="synopsis" 
                    ><%= book.synopsis %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/books">Cancel</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>