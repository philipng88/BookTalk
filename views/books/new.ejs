<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Add a Book</h1>
        </div>
        <div class="new-book-form-wrapper">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="title" 
                        placeholder="title"
                    >
                </div>
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="author" 
                        placeholder="author"
                    >
                </div>
                <div class="form-group">
                    <input
                        required 
                        class="form-control" 
                        type="text" 
                        name="image" 
                        placeholder="image url"
                        aria-describedby="image-url-requirements"
                        pattern="^https:\/\/i\.gr-assets\.com\/images\/S\/.*"
                    >
                    <small id="image-url-requirements" class="form-text text-muted">
                        Only images from <a href="https://goodreads.com/" target="_blank">goodreads.com</a> are accepted
                    </small>
                </div>
                <div class="form-group">
                    <textarea 
                        class="form-control" 
                        type="text" 
                        name="synopsis"
                        placeholder="synopsis..." 
                    ></textarea> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/books">Cancel</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>