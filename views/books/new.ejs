<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Add a Book</h1>
        </div>
        <div class="form-wrapper w-50">
            <form action="/books" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="new-book-title">Title</label>
                    <input
                        required 
                        class="form-control"
                        id="new-book-title" 
                        type="text" 
                        name="book[title]" 
                    >
                </div>
                <div class="form-group">
                    <label for="new-book-author">Author</label>
                    <input
                        required 
                        class="form-control"
                        id="new-book-author" 
                        type="text" 
                        name="book[author]" 
                    >
                </div>
                <div class="form-group">
                    <label for="new-book-cover-image">Book Cover Image</label>
                    <div class="custom-file">
                        <input
                            required 
                            class="custom-file-input" 
                            id="new-book-cover-image"
                            type="file" 
                            name="image" 
                            accept="image/*" 
                        >
                        <label for="new-book-cover-image" class="custom-file-label">Choose File</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="new-book-synopsis">Synopsis</label>
                    <textarea 
                        rows="5"
                        class="form-control"
                        id="new-book-synopsis" 
                        type="text" 
                        name="book[synopsis]"
                    ></textarea> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/books">Cancel</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>